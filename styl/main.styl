$text=#555;
$elHover = #bababa;
$elBorder=#cccccc;
$elFont = 14px 'Oswald', sans-serif;
html, body
	margin:0;
	padding:0;
.spinner
	&-wrap
		position: absolute;
		left:0;
		background-color: rgba(89, 89, 89, 0.5);
		width: 100%;
		height: 445px;
		text-align: center;
	&-loader
		position: relative;top: 45%;
.main
	&-wrap
		padding: 50px;
		background-color: #ebeef0;
	&-title-wrap
		padding: 15px 30px;
		background-color: #ffffff;
		margin-bottom: 30px;
	&__title
		font: 16px 'Oswald', sans-serif;
		color: $text;
		text-transform uppercase;
		display inline-block
		vertical-align: top
	&-floor
		position: relative
		display: inline-block
		vertical-align: top
		left: 100px;
		&__title, &__item
			border: 1px solid $elBorder;
			padding: 5px 15px;
			width: 100px;
			font: 14px 'Oswald', sans-serif;
			cursor pointer;
			text-transform uppercase;
			color: $text;
			position: relative
		&__title {
			&:after {
				content:'';
				position: absolute;
				right: 10px;
				top: 14px;
				display: block;
				width:9px;
				height: 5px;
				background: url('data:image/png;base64,') left top no-repeat transparent;
			}
		}
		&__item
			border: none;
			transition: all .3s;
			&.active
				background-color: $elHover ;
				color: #ffffff;
			&:hover
				background-color: $elHover ;
				color: #ffffff;


		&-list
			position: absolute;
			border: 1px solid $elBorder;
			background-color: #fff;
			width: 100%;
			box-sizing: border-box;
			border-top: none;
			max-height: 0;
			transition: all .5s;
			overflow hidden
			&.opened
				max-height: 70px;
				transition all .5s;

.search
	&-wrap
		position: relative
		left: 200px
		display: inline-block
		vertical-align: top
	&-field
		padding: 5px 15px;
		border: 1px solid $elBorder;
		transition: all .3s
		font: $elFont
		outline-color: transparent;
		text-transform uppercase
		color: $text;
		width: 150px;
		&:focus
			outline: none;
	&-worker
		&-list
			position absolute
			left: 0
			top 32px;
			margin:0;
			border: 1px solid $elBorder;
			width: 180px;
			padding:0;
			background-color: #ffffff;
			overflow:auto;
			/*animation: appearance 1s;*/
			/*-webkit-animation: appearance 1s;*/
			&.--hide
				display: none
		&__item
			padding: 7px 10px;
			list-style-type: none
			font: $elFont
			text-transform: uppercase;
			&.active, &:hover
				background-color: $elBorder
				color: #ffffff;
.floor
	&-wrap
		position relative
.clearfix:after
	content:'';
	display: block;
	clear: both;
.worker
	padding: 30px;
	background-color: #fff;
	margin-left: 480px
	vertical-align: top
	width: 440px;
	height: 445px
	box-sizing: border-box;
	& img
		float: left;
	&__title
		font: 25px 'Oswald', sans-serif;
		color: #39C2D7;
		margin-left: 120px;
	&-contacts
		padding: 10px;
		margin:0 0 0 120px;
		&__item
			list-style-type:none;
			padding: 3px 3px 3px 20px;
			font: 14px 'Source Sans Pro', sans-serif;
			color: $text;
			position: relative;
			&:before
				content: "";
				position: absolute;
				left:0;
				top:5px;
				width: 18px;
				height: 18px;
				background-image: url(../img/sprite.svg);
				background-repeat: no-repeat;
			&.skype:before
				background-position: 0 0;
			&.email:before
				background-position: -19px 2px;
			&.phone:before
				background-position: -36px -1px
.room-space
	width: 380px
	height: 380px
	.active
		.room
			fill: $elHover
		.roomNumber
			fill: #ffffff;
.vector-wrap
	float: left;
	padding: 30px;
	background-color: #fff;